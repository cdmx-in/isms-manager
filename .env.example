# PostgreSQL
POSTGRES_USER=isms_user
POSTGRES_PASSWORD=isms_secure_password_change_me
POSTGRES_DB=isms_db

# Redis
REDIS_PASSWORD=redis_secure_password_change_me

# MinIO (S3-compatible storage)
MINIO_ROOT_USER=minio_admin
MINIO_ROOT_PASSWORD=minio_secure_password_change_me
MINIO_BUCKET=isms-files

# JWT Secrets (generate strong random strings for production)
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars-change-in-production
SESSION_SECRET=your-session-secret-min-32-chars-change-in-production

# Google OAuth (optional - get from Google Cloud Console)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# Google Drive API (optional - for Google Drive file storage)
GOOGLE_DRIVE_CLIENT_ID=
GOOGLE_DRIVE_CLIENT_SECRET=
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:3000/api/storage/google-drive/callback

# Google Service Account (for shared Drive folder browsing)
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=./config/google-service-account.json

# OpenAI (for RAG embeddings and chat)
OPENAI_API_KEY=
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_CHAT_MODEL=gpt-4o-mini

# Application URLs
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Environment
NODE_ENV=development
